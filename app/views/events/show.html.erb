<h1>
This event is created by: <%= @event.creator.username %>
</h1>

<% if !flash[:error].nil? %>
 <div id="error_explanation">
   <strong><%= flash[:error] %></strong>
 </div>
<% end %>

<%= form_for(@event, url: events_attend_to_event_url, method: :post  ) do |f| %>
  <%= f.hidden_field :id %>
  <%= f.submit "Attend" %>
<% end %>

<div>
  <h3>
  Attendance members
  </h3>
  <div>
    <%= attendees_list %>
  </div>
</div>